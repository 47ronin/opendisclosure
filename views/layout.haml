!!! 5
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %title Open Disclosure
    %meta{content: "width=device-width", name: "viewport"}
    %link{href: 'http://fonts.googleapis.com/css?family=Open+Sans:400,300,800', rel:"stylesheet"}
    %link{href: "/css/main.css", rel: "stylesheet"}
    %script{src: "http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"}
    %script{src: "http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js"}
    %script{src: "http://cdnjs.cloudflare.com/ajax/libs/d3/3.3.3/d3.min.js"}
    %script{src: "/js/vendor/bootstrap.min.js"}
    %script{src: "/js/main.js"}
    %script{src: "/js/vendor/modernizr-2.6.2-respond-1.1.0.min.js"}
    %script{src: "/js/app.js"}
  %body
    %header.site-header
      .site-header-title
        %h1 Open Disclosure
      .site-header-right
        by
        %a{ href: 'http://openoakland.org' }
          %img{ src: '/images/openoaklandlogo.png', width: '150px' }

    #content
      %section#mayoral-candidates
        %h2#mayoral-candidates City of Oakland Mayoral Candidates
        %ul.mayoral-candidates
          %li.mayoral-box{ style: 'background-image: url(/images/Quan.jpg)' }
            %a.mayoral-box-name{ href: '/quan' }
              Jean Quan

          %li.mayoral-box{ style: 'background-image: url(/images/Parker.jpg)' }
            %a.mayoral-box-name{ href: '/parker' }
              Bryan Parker

          %li.mayoral-box{ style: 'background-image: url(/images/Schaaf.jpg)' }
            %a.mayoral-box-name{ href: '/schaaf' }
              Libby Schaaf

          %li.mayoral-box{ style: 'background-image: url(/images/Tuman.jpg)' }
            %a.mayoral-box-name{ href: '/tuman' }
              Joe Tuman

      %section
        %h2 Charts
        #charts

    #sidebar{ data: { offset: { top: 210 }, spy: 'affix' }}
      %ul
        %li
          %a{ href: '#mayoral-candidates' } Mayoral Candidates

    :javascript
      var charts = [
        {
          id: 'chart1',
          name: 'My Fancy Chart',
          description: 'How do these work?'
        }
      ];
